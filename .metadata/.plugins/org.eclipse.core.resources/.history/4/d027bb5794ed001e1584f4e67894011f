package pkg1.cric;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.bind.annotation.GetMapping;
import java.io.File;
import java.io.IOException;
import java.util.Scanner;
import java.util.ArrayList;
import java.util.Collections;
@RestController
public class Cric1Controller {
	@GetMapping("/cric/loadData")
	public static String loadData() throws IOException {
		File f1=new File("1273727.csv");
		Scanner sc1=new Scanner(f1);
		ArrayList<String>list1=new ArrayList<>();
		ArrayList<String>list2=new ArrayList<>();
		ArrayList<Integer>list3=new ArrayList<>();
		ArrayList<Integer>list4=new ArrayList<>();
		String[] arr1=new String[16];
		String s1="";
		String s2="";
		String name1="";
		String bestbatsman="";
		int position=0;
		int maxruns=0;
		int total1=0;
		s1=sc1.nextLine();
		for(int i=0;i<21;i++) {
			sc1.nextLine();
		}
		for(int i=0;i<22;i++) {
			s1=sc1.nextLine();
			arr1=s1.split(",");
			list1.add(arr1[3]);
		}
		//System.out.println(list1);
		for(int i=0;i<28;i++) {
			sc1.nextLine();
		}
		for (int i=0;i<100;i++) {
			s1=sc1.nextLine();
			arr1=s1.split(",");
			list2.add(arr1[4]);
			list3.add(Integer.parseInt(arr1[7]));
		}
		//System.out.println(list2);
		System.out.println(list3);
		for (int j=0;j<list1.size();j++) {
			name1=list1.get(j);
			total1=0;
			for (int i=0;i<list3.size();i++) {
				if(list2.get(i).equals(name1)) {
					total1=total1+list4.get(i);
					
				}
			}
			list4.add(total1);
		}
		System.out.println(list4);
		maxruns=Collections.max(list4);
		position=list4.indexOf(position);
		bestbatsman=list1.get(position);
		s2=bestbatsman+","+maxruns;
		return s2;
		
	}

}
